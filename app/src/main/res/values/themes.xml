<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DicodingStory" parent="Theme.Material3.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/navy_500</item>
        <item name="colorPrimaryVariant">@color/navy_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Remove Action bar -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Card" parent="Widget.Material3.CardView.Filled">
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/navy_50</item>
    </style>
</resources>